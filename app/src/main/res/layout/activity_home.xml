<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin1X"
        android:paddingVertical="@dimen/margin0X"
        android:layout_marginHorizontal="@dimen/margin1X"
        android:layout_marginBottom="@dimen/margin6X"
        app:placeholderText="ENGLISH"
        app:placeholderTextColor="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/set_input_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin2X"
        android:layout_marginVertical="@dimen/margin1X"
        android:padding="@dimen/margin3X"
        style="@style/Widget.AppCompat.EditText"
        android:hint="@string/input_text"
        android:textSize="@dimen/size5X"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/input_spinner"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/output_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin1X"
        android:paddingVertical="@dimen/margin0X"
        android:layout_marginHorizontal="@dimen/margin1X"
        android:layout_marginBottom="@dimen/margin6X"
        app:placeholderText="ENGLISH"
        app:placeholderTextColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/input_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/set_output_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/output_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="OUTPUT TEXT"
        android:layout_marginHorizontal="@dimen/margin2X"
        android:layout_marginVertical="@dimen/margin1X"
        android:padding="@dimen/margin3X"
        android:textSize="@dimen/size5X"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/output_spinner"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/detect_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin2X"
        android:layout_marginTop="@dimen/margin6X"
        android:padding="@dimen/margin3X"
        style="@style/Widget.AppCompat.EditText"
        android:hint="@string/input_text"
        android:textSize="@dimen/size5X"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/output_text"/>

    <Button
        android:id="@+id/get_language_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/get_language"
        android:textSize="@dimen/size3X"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin4X"
        android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detect_input_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>